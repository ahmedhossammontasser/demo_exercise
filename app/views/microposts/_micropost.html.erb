<li>
<span class="title"><%= micropost.title %></span>	
<span class="content"><%= truncate(micropost.content,length: 20) %></span>
<span class="timestamp">
Posted <%= time_ago_in_words(micropost.created_at) %> ago.
</span>
<% if current_user?(micropost.user) %>
<%= link_to "details", showmicropost_path, method: :show, title: micropost.title %>
<%= link_to "edit", editmicropost_path, method: :edit, title: micropost.title %>
<%= link_to "delete", micropost, method: :delete,data: { confirm: "You sure?" },title: micropost.title %>

<% end %>
</li>