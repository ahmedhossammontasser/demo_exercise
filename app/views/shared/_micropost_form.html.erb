<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_field :title, placeholder: "Compose new micropost title..." %>
		<%= f.text_area :content, placeholder: "Compose new micropost content..." %>
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>